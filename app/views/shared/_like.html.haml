.six.columns.centered
  .centered
    %img.like_image{ src:like.standard_res_image }
  .like_caption
    = "Posted by: #{like.username}"
  .like_caption
    - if like.web_url
      %a{ href:like.web_url } View on instagram
  -if current_user?(like.user)
    = form_for(like, url:user_like_path(like.user, like)) do |f|
      .field
        = f.text_field :tag_list
      .actions
        = f.submit "Submit"